{	
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true
	},	
	"files": [
		"./app/main.ts",
		"./app/routes/app.routes.ts",
		"./app/components/app.component.ts"	
	],
	"exclude": [
		"node_modules"
	]
}